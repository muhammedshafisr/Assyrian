</head>

<body>

    <%- include('../partials/adminNav.ejs')%>

        <main style="margin-top: 58px">
            <div class="container pt-4">
                <section class="mb-4">
                    <div class="card">
                        <div class="card-header d-flex py-3 justify-content-between align-items-center">
                            <h5 class="mb-0 text-center"><strong>Coupons</strong></h5>
                            <a class="btn" href="addCoupon">Add coupon</a>
                        </div>
                    </div>
                </section>
                <% if (!resolve.length){%>
                    <h1>No coupon to display</h1>
                <%}else{%>
                        <section style="background-color: #eee; min-height: 70vh;">
                            <div class="container py-5">
                              <div class="row">
                                <%resolve.forEach((x) => {%>
                                <div class="col-lg-4 col-md-12 mb-4">
                                  <div class="bg-image hover-zoom ripple shadow-1-strong rounded">
                                    <img style="max-height: 168px !important;" src="/img/product/<%=x.image%>"
                                      class="w-100" />
                                    <a href="#!">
                                      <div class="mask" style="background-color: rgba(0, 0, 0, 0.3);">
                                        <div class="d-flex justify-content-start align-items-start h-100">
                                          <h5><span class="badge bg-light pt-2 ms-3 mt-3 text-dark">â‚¹<%= x.amount%></span></h5>
                                        </div>
                                      </div>
                                      <div class="hover-overlay">
                                        <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                      </div>
                                    </a>
                                  </div>
                                  <h6 class="pt-3" style="text-align: center;"><%=x.couponName%></h6>
                                </div>
                                <%})%>
                              </div>
                            </div>
                          </section>
                <%}%>
            </div>
        </main>

</body>

<!-- MDB -->
<script type="text/javascript" src="adminstyle/js/mdb.min.js"></script>
<!-- Custom scripts -->
<script type="text/javascript" src="adminstyle/js/admin.js"></script>


</html>