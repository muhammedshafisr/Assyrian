                                    <div class="col-12 d-flex justify-content-center">
                                        <h4>Slider-2</h4>
                                    </div>
                                    <div class="col-12 mt-4 px-5">
                                        Background_image
                                        <input type="file" class="form-control" name="backgroundImage_2" multiple
