      </style> -->

</head>
<body>

    <%- include('../partials/adminNav.ejs')%>
        <!--Main layout-->
  <main style="margin-top: 58px">
    <div class="container pt-4">
      <!-- Section: Main chart -->
      <section class="mb-4">
        <div class="card">
          <div class="card-header d-flex py-3 justify-content-between align-items-center">
            <h5 class="mb-0 text-center"><strong>Edit Products</strong></h5>
          </div>
        </div>
      </section>
      <!-- Section: Main chart -->
    
    <!-- Section: Main chart -->
      <% var product%>
      <!--Section: Sales Performance KPIs-->
      <section class="mb-4">
        <div class="container w-50 my-3">
            <form action="editProduct" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row mb-4">
                  <div class="col-6">
                    <div class="form-outline">
                      <input type="text" id="form6Example2" value="<%= product.productName%>" name="productname" class="form-control" />
                      <label class="form-label" for="form6Example2">Product name</label>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="form-outline">
                      <input type="text" id="form6Example2" value="<%= product.category%>" name="category" class="form-control" />
                      <label class="form-label" for="form6Example2">Category</label>
                    </div>
                  </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-6">
                      <div class="form-outline">
                        <input type="text" id="form6Example2" value="<%= product.sleeve%>" name="sleeve" class="form-control" />
                        <label class="form-label" for="form6Example2">Sleeve</label>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="form-outline">
                        <input type="text" id="form6Example2" value="<%= product.fabric%>" name="fabric" class="form-control" />
                        <label class="form-label" for="form6Example2">Fabric</label>
                      </div>
                    </div>
                  </div>

                  <div class="row mb-4">
                    <div class="col-6">
                      <div class="form-outline">
                        <input type="text" id="form6Example2" value="<%= product.idealFor%>" name="ideal" class="form-control" />
                        <label class="form-label" for="form6Example2">Ideal for</label>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="form-outline">
                        <input type="text" id="form6Example2" value="<%= product.size%>" name="size" class="form-control" />
                        <label class="form-label" for="form6Example2">Size</label>
                      </div>
                    </div>
                  </div>

                  <div class="row mb-4">
                    <div class="col-6">
                      <div class="form-outline">
                        <input type="text" id="form6Example2" value="<%= product.price%>" name="price" class="form-control" />
                        <label class="form-label" for="form6Example2">Price</label>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="form-outline">
                        <input type="text" id="form6Example2" value="<%= product.packOf%>" name="packof" class="form-control" />
                        <label class="form-label" for="form6Example2">Pack of</label>
                      </div>
                    </div>
                  </div>
                  
                <!-- image input -->
                <!-- <label class="form-label" for="customFile">image</label> -->
                <input type="file" class="form-control mb-3" value="<%= product.imageOne%>" name="imageOne" multiple id="input-images" />
                <input type="file" class="form-control" value="<%= product.imageTwo%>" name="imageTwo" multiple id="input-images" />
                <!-- Message input -->
                <div class="form-outline mt-4 mb-4">
                  <textarea class="form-control" id="form6Example7" name="description" rows="1"><%= product.description%></textarea>
                  <label class="form-label"  for="form6Example7">Description</label>
                </div>
                <input type="hidden" value="<%= product._id%>" name="productId">
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Add product</button>
              </form>
            </div>

            <div class="row">
              <div class="col-sm-12">
                <div class="preview-images"></div>
              </div>
            </div>

      </section>
      <!--Section: Sales Performance KPIs-->
    </div>
  </main>

</body>

      <!-- MDB -->
  <script type="text/javascript" src="adminstyle/js/mdb.min.js"></script>
  <!-- Custom scripts -->
  <script type="text/javascript" src="adminstyle/js/admin.js"></script>

</html>