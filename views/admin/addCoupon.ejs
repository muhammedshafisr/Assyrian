<body>

    <%- include('../partials/adminNav.ejs')%>

        <main style="margin-top: 58px">
            <div class="container pt-4">
                
                <section class="mb-4">
                    <div class="card">
                        <div class="card-header d-flex py-3 justify-content-between align-items-center">
                            <h5 class="mb-0 text-center"><strong>Add Coupons</strong></h5>
                        </div>
                    </div>
                </section>

                <div class="container h-100">
                    <form action="addCoupon" method="post">
                        <div class="row justify-content-center">
                            <div class="col-6">
                                <div class="row">
                                    <div class="col-12 d-flex justify-content-center">
                                        <h4>New Coupon</h4>
                                    </div>
                                    <div class="col-12 mt-4 px-5">
                                        Coupon_image
                                        <input type="file" class="form-control" name="image" multiple
                                            id="input-images" />
                                    </div>
                                    <div class="col-12 mt-4 px-5">
                                        <div class="form-outline">
                                            <input type="text" name="name" class="form-control"
                                                 />
                                            <label class="form-label" for="form6Example2">Coupon_name</label>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-4 px-5">
                                        <div class="form-outline">
                                            <input type="text" name="reqAmount" class="form-control"
                                                 />
                                            <label class="form-label" for="form6Example2">Required_amount</label>
                                        </div>
                                    </div>
                                    
                                    <div class="col-12 mt-4 px-5">
                                        <div class="form-outline">
                                            <input type="text" name="amount" class="form-control"
                                                 />
                                            <label class="form-label" for="form6Example2">Amount</label>
                                        </div>
                                    </div>                                    
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mt-4 mb-5">
                            <button type="submit" class="btn">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            
            </div>
        </main>

</body>

